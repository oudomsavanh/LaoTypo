rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /players/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
      allow delete: if false;
    }
    match /gameResults/{resultId} {
      allow read: if true;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update, delete: if false;
    }
    match /sessions/{sessionId} {
      allow read: if request.auth != null;
      allow create, update, delete: if request.auth != null && request.auth.token.isHost == true;
    }
    match /gameWords/{docId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.email == 'crews@laotypo.com';
    }
  }
}
